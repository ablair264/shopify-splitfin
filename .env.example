# Shopify App Configuration
REACT_APP_SHOPIFY_API_KEY=your_shopify_api_key
REACT_APP_SHOPIFY_API_SECRET_KEY=your_shopify_api_secret_key
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_from_shopify

# Your Netlify site URL (update after deployment)
REACT_APP_HOST=https://your-site-name.netlify.app
REACT_APP_SHOPIFY_REDIRECT_URI=https://your-site-name.netlify.app/auth/callback

# OpenAI Configuration
REACT_APP_OPENAI_API_KEY=your_openai_api_key
